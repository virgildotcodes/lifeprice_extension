{
  "manifest_version": 3,
  "name": "LifePrice",
  "version": "0.1",
  "description": "Displays prices in terms of hours worked based on your hourly wage.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {}
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {}
}
